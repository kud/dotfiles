#! /usr/bin/env zsh

source $MY/core/helper

if [[ $# -eq 0 ]]; then
  $0 --help
else

  case "$1" in
      user)
        subl ~/Sync/low/appdata/sublimetext3/Packages/User
      ;;
      snippets)
        subl ~/Sync/low/appdata/sublimetext3/Packages/User/snippets
      ;;
      --help)
        echo_space
        printf "Usage:"
        echo_spacex2
        printf "    ${COLOUR_CYAN}st-helper${COLOUR_RESET} [<command>|--help]"
        echo_spacex3
        printf "Commands:"
        echo_spacex2
        printf "    user                   ${COLOUR_BLACK}Edit /User/${COLOUR_RESET}"
        echo_space
        printf "    snippets               ${COLOUR_BLACK}Edit snippets${COLOUR_RESET}"
        echo_spacex2
      ;;
      *)
        echo 'What did you say?'
      ;;
  esac

fi
