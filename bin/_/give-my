#! /usr/bin/env zsh

source $MY/core/helper

ip() {
  IP=$(dig +short myip.opendns.com @resolver1.opendns.com)
  echo "${IP}"
  echo ${IP}|pbcopy
}

localIp() {
  IP=$(ipconfig getifaddr en0)
  echo "${IP}"
  echo ${IP}|pbcopy
}

resolution() {
  system_profiler SPDisplaysDataType|grep Resolution
}

if [[ $# -eq 0 ]]; then
  $0 --help
else

  case "$1" in
      ip)
        ip
      ;;
      local-ip)
        localIp
      ;;
      resolution)
        resolution
      ;;
      --help)
          echo_space
          printf "Usage:"
          echo_spacex2
          printf "    ${COLOUR_CYAN}give-my${COLOUR_RESET} [<command>|--help]"
          echo_spacex3
          printf "Commands:"
          echo_spacex2
          printf "    ip               ${COLOUR_BLACK}Give the public ip${COLOUR_RESET}"
          echo_space
          printf "    local-ip         ${COLOUR_BLACK}Give the local ip${COLOUR_RESET}"
          echo_space
          printf "    resolution       ${COLOUR_BLACK}Give the resolution${COLOUR_RESET}"
          echo_spacex2
          ;;
      *)
        echo 'What did you say?'
      ;;
  esac

fi
