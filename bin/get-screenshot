#! /usr/bin/env zsh

urlencode() {
  setopt localoptions extendedglob
  input=( ${(s::)1} )
  print ${(j::)input/(#b)([^A-Za-z0-9_.\!~*\'\(\)-])/%${(l:2::0:)$(([##16]#match))}}
}

NAME=$(ls -t ${HOME}/Wuala/screenshots  |awk '{printf("%s",$0);exit}')
NAME=$(urlencode $NAME)
echo "https://content.wuala.com/contents/_kud/screenshots/$NAME/?dl=0" |pbcopy
