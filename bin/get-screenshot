#! /usr/bin/env zsh

urlencode() {
  setopt localoptions extendedglob
  input=( ${(s::)1} )
  print ${(j::)input/(#b)([^A-Za-z0-9_.\!~*\'\(\)-])/%${(l:2::0:)$(([##16]#match))}}
}

NAME=$(ls -t ${HOME}/Sync/screenshots  |awk '{printf("%s",$0);exit}')
NAME=$(urlencode $NAME)
# echo "https://content.sync.com/contents/_kud/screenshots/$NAME/?dl=0" |pbcopy

if [ "$1" = "-g" ]; then
  echo "http://screenshots.kud.io/$NAME/" |pbcopy
else
  echo "http://screenshot.kud.io/$NAME/?dl=0" |pbcopy
fi

