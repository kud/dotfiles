#! /usr/bin/env zsh
source $MY/core/helper

echo_space
echo_title_install "apps from AppStore"

if [ ! -d "/Applications/Xcode.app/" ]; then
  mas install 497799835
fi

if [ ! -d "/Applications/Tweetbot.app/" ]; then
  mas install 557168941
fi

if [ ! -d "/Applications/Xscope.app/" ]; then
  mas install 889428659
fi

echo_space
echo_title_update "apps from AppStore"

mas upgrade
