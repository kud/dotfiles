#! /usr/bin/env zsh

source $MY/core/helper

# install python packages
echo_space
echo_title_install "python @ work"

# Contexte
## Journal
CTX_JOURNAL_PYTHON_VERSION="2.7.10"
pyenv install -s $CTX_JOURNAL_PYTHON_VERSION
# pyenv virtualenv-delete -f contexte
pyenv virtualenv $CTX_JOURNAL_PYTHON_VERSION contexte
# pyenv local contexte
# pip-upgrade-all

## Data Lois Webapp
CTX_DATA_LOIS_WEBAPP_PYTHON_VERSION="2.7.10"
pyenv install -s $CTX_DATA_LOIS_WEBAPP_PYTHON_VERSION
# pyenv virtualenv-delete -f lois-webapp
pyenv virtualenv $CTX_DATA_LOIS_WEBAPP_PYTHON_VERSION lois-webapp
# pyenv local lois-webapp
# pip-upgrade-all

## Data Lois Backend
CTX_DATA_LOIS_BACKEND_PYTHON_VERSION="3.6.8"
pyenv install -s $CTX_DATA_LOIS_BACKEND_PYTHON_VERSION
# pyenv virtualenv-delete -f lois-backend
pyenv virtualenv $CTX_DATA_LOIS_BACKEND_PYTHON_VERSION lois-backend
# pyenv local lois-backend
# pip-upgrade-all

## Apps
CTX_APPS_PYTHON_VERSION="2.7.10"
pyenv install -s $CTX_APPS_PYTHON_VERSION
# pyenv virtualenv-delete -f apps
pyenv virtualenv $CTX_APPS_PYTHON_VERSION apps
# pyenv local apps
# pip-upgrade-all

pyenv local --unset

